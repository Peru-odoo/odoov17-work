<odoo>
    <record id="ir_cron_import_baloto_revancha" model="ir.cron">
        <field name="name">Import baloto and revancha data</field>
        <field name="model_id" ref="lotteries.model_lottery_importer"/>
        <field name="state">code</field>
        <field name="code">model.run_import_baloto_revancha()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

